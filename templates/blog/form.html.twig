<form method="post">
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="article[title]" required value="{{ article.title | default('') }}">
    </div>
    <div>
        <label for="content">Content</label>
        <textarea id="content" name="article[content]">{{ article.content | default('') }}</textarea>
    </div>
    <button type="submit">Submit</button>
</form>